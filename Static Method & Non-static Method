package staticMethod;

public class StaticMethod {

	// Static method
    public static void sayHello() {
        System.out.println("Hello from a static method!");
    }
    
    // Non-static method
    public void sayHi() {
        System.out.println("Hi from a non-static method!");
    }

    public static void main(String[] args) {
        // Calling the static method directly using the class name
    	StaticMethod.sayHello();  // Output: Hello from a static method!
        
        // Calling the non-static method requires creating an object
    	StaticMethod myObject = new StaticMethod();
        myObject.sayHi();  // Output: Hi from a non-static method!
    }

}
